package christianblackjack;

public class Cardies
{
    private Suit suit;
    private Value value;
    
    public Cardies(Suit suit, Value value)
    {
        this.value = value;
        this.suit = suit;
    }
    public String toString()
    {                                  
        return this.value.toString() + " of " + this.suit.toString(); //combins suit and value
    }
    public Value getValue()//checks value of the cards
    {
        return this.value;
    }
            
}
